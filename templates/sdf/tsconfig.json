{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "newLine": "LF",
        "allowJs": true,
        "outDir": "dist/FileCabinet/SuiteScripts/<%=FILE_CAB_FOLDER%>",
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "baseUrl": ".",
        "lib": [
            "es6",
            "es5",
            "es2015.promise",
            "dom",
            "es2015.iterable"
        ],
        "paths": {
            "N": [
                "node_modules/@hitc/netsuite-types/N"
            ],
            "N/*": [
                "node_modules/@hitc/netsuite-types/N/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
